<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    >
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:hint="اسم الصيدليه"
        android:padding="5dp"
        android:textDirection="rtl"
        android:drawableRight="@mipmap/user"
        android:inputType="textPersonName"
        android:gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:scrollHorizontally="true"

        />
    <EditText
        android:id="@+id/userPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:hint="رقم المحمول"
        android:padding="5dp"
        android:textDirection="rtl"
        android:drawableRight="@mipmap/phone"
        android:inputType="numberDecimal"
        android:maxLength="11"
        android:gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:scrollHorizontally="true"

        />
    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:hint="كلمه المرور لاتقل عن 6 احرف او ارقام"
        android:padding="5dp"
        android:textDirection="rtl"
        android:drawableRight="@mipmap/password"
        android:inputType="textPassword"
        android:gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <EditText
        android:id="@+id/userLicence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:hint="رقم الرخصه"
        android:padding="5dp"
        android:textDirection="rtl"
        android:drawableRight="@mipmap/licence"
        android:gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:scrollHorizontally="true"

        />


    <EditText
        android:id="@+id/userLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:hint="العنوان"
        android:padding="5dp"
        android:textDirection="rtl"
        android:drawableRight="@mipmap/locations"
        android:gravity="right|center"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:lines="1"
        android:scrollHorizontally="true"

        />

    <Button
        android:id="@+id/Regiser_registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/login_txt"
        android:padding="20dp"
        android:background="@drawable/button_pressed_state"
        android:textSize="18sp"
        android:layout_marginBottom="80dp"

        />
</LinearLayout>